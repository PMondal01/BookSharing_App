<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/imageview_card"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY">
        </ImageView>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:background="#E4FCD5"
            android:layout_marginTop="250dp"
            android:gravity="center"

            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="নাম : "
                    android:textColor="#0A43E0"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    >
                </TextView>

                <TextView
                    android:id="@+id/bookname_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#010718"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center">
                </TextView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  দাম : "
                    android:textColor="#4675EE"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp">
                </TextView>

                <TextView
                    android:id="@+id/bookprice_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textColor="#02091D"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" টাকা"
                    android:textStyle="bold"
                    android:textSize="20dp">
                </TextView>





        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="275dp"
        android:gravity="center"
        android:background="#73FC13"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="যোগাযোগ : "
            android:textColor="#3F51B5"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="20dp"

            >
        </TextView>

        <TextView
            android:id="@+id/number_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number"
            android:textColor="#010718"
            android:textSize="20dp"
            android:textStyle="bold"
            android:autoLink="phone"

    >
        </TextView>

    </LinearLayout>









</androidx.cardview.widget.CardView>